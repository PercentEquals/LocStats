<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <TextView
        android:text="Sign in"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textSize="25dp" 
        android:textStyle="bold"/>
    <TextView
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextEmail"
        android:defaultFocusHighlightEnabled="true" />
    <TextView
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text5" />
    <TextView
        android:text="max 16 characters"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextUsername"
        android:defaultFocusHighlightEnabled="true" />
    <TextView
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <TextView
        android:text="8 - 16 characters, min 1 special\nmin 1 capital, min 1 digit"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword" />
    <Button
        android:text="Sign in"
        android:layout_width="220.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegister" />
    <TextView
        android:text="Provided data is invalid"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="274.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/infoText"
        android:textColor="#ff0000"
        android:layout_gravity="center"
        android:gravity="center_horizontal"/>
    <Button
        android:text="Return"
        android:layout_width="128.5dp"
        android:layout_height="38.0dp"
        android:id="@+id/buttonCancel"
        android:textSize="10dp"
        android:layout_marginRight="0.0dp" />

</LinearLayout>
